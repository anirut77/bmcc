    <div id="toast" class="fixed bottom-10 left-1/2 -translate-x-1/2 px-8 py-4 rounded-2xl glass-card border border-emerald-500 shadow-2xl hidden z-50">
        <p id="toast-text" class="font-bold text-center"></p>
    </div>

    <script>
        let techData = {};
        let radarChart = null;

        function goToPhase2() {
            const w = document.querySelector('input[name="water-tech"]:checked');
            const a = document.querySelector('input[name="air-tech"]:checked');
            const ws = document.querySelector('input[name="waste-tech"]:checked');

            if (!w && !a && !ws) {
                showToast("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏ô‡∏ß‡∏±‡∏ï‡∏Å‡∏£‡∏£‡∏°‡∏≠‡∏¢‡πà‡∏≤‡∏á‡∏ô‡πâ‡∏≠‡∏¢‡∏´‡∏ô‡∏∂‡πà‡∏á‡∏î‡πâ‡∏≤‡∏ô", "text-red-400");
                return;
            }

            techData = {
                water: w ? w.parentElement.innerText.trim() : "None",
                air: a ? a.parentElement.innerText.trim() : "None",
                waste: ws ? ws.parentElement.innerText.trim() : "None"
            };

            document.getElementById('phase-1').classList.add('hidden');
            document.getElementById('phase-2').classList.remove('hidden');
            
            const dots = document.querySelectorAll('.step-dot');
            dots[1].classList.replace('bg-slate-700', 'bg-emerald-500');

            // Update VP display
            let vpHtml = `<ul class="list-disc ml-4">`;
            if(techData.water !== "None") vpHtml += `<li>${techData.water}</li>`;
            if(techData.air !== "None" && !techData.air.includes("‡πÑ‡∏°‡πà‡πÄ‡∏ô‡πâ‡∏ô")) vpHtml += `<li>${techData.air}</li>`;
            if(techData.waste !== "None") vpHtml += `<li>${techData.waste}</li>`;
            vpHtml += `</ul>`;
            document.getElementById('summary-vp').innerHTML = vpHtml;
        }

        function analyzeSuccess() {
            const selects = document.querySelectorAll('#phase-2 select');
            let allSelected = true;
            let bmcScores = [];
            
            selects.forEach(s => {
                if(!s.value) allSelected = false;
                bmcScores.push(parseInt(s.value) || 0);
            });

            if(!allSelected) {
                showToast("‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• BMC ‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ó‡∏∏‡∏Å‡∏ä‡πà‡∏≠‡∏á", "text-orange-400");
                return;
            }

            // Calculations for Radar Chart
            // [Technology, Market Fit, Sustainability, Financial, Operation]
            let scores = [0, 0, 0, 0, 0];
            
            // Logic for Technology (from Phase 1 & BMC KA/KR)
            scores[0] = (bmcScores[1] + bmcScores[2]) * 8; // Max 80
            
            // Logic for Market Fit (BMC CS/CH)
            scores[1] = (bmcScores[4] + bmcScores[5]) * 9; // Max 90
            
            // Logic for Sustainability (Eco focus)
            scores[2] = 70 + (bmcScores[0] === 5 ? 20 : 0); // Environmental engineers usually score high here
            
            // Logic for Financial (Cost/Revenue)
            scores[3] = (bmcScores[6] + bmcScores[7]) * 9;
            
            // Logic for Operation (Partner/Relation)
            scores[4] = (bmcScores[0] + bmcScores[3]) * 8;

            renderResults(scores);
        }

        function renderResults(scores) {
            document.getElementById('phase-2').classList.add('hidden');
            document.getElementById('phase-3').classList.remove('hidden');
            document.querySelectorAll('.step-dot')[2].classList.replace('bg-slate-700', 'bg-emerald-500');

            const avg = scores.reduce((a,b) => a+b) / scores.length;
            const successPct = Math.round(avg);
            
            document.getElementById('success-percentage').innerText = successPct + "%";
            
            let rank = "";
            let feedback = "";
            if(successPct > 80) {
                rank = "Green Unicorn ü¶Ñ";
                feedback = `
                    <p class="text-emerald-400 font-bold">‡∏¢‡∏≠‡∏î‡πÄ‡∏¢‡∏µ‡πà‡∏¢‡∏°!</p>
                    <p>‡πÇ‡∏°‡πÄ‡∏î‡∏•‡∏ò‡∏∏‡∏£‡∏Å‡∏¥‡∏à‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì‡∏™‡∏°‡∏ö‡∏π‡∏£‡∏ì‡πå‡πÅ‡∏ö‡∏ö ‡πÄ‡∏ó‡∏Ñ‡πÇ‡∏ô‡πÇ‡∏•‡∏¢‡∏µ‡∏ó‡∏µ‡πà‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏™‡∏≠‡∏î‡∏Ñ‡∏•‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ö‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤‡∏≠‡∏∏‡∏ï‡∏™‡∏≤‡∏´‡∏Å‡∏£‡∏£‡∏° ‡πÅ‡∏•‡∏∞‡πÇ‡∏Ñ‡∏£‡∏á‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏£‡∏≤‡∏¢‡πÑ‡∏î‡πâ‡πÅ‡∏ö‡∏ö SaaS ‡∏à‡∏∞‡∏ó‡∏≥‡πÉ‡∏´‡πâ‡∏ö‡∏£‡∏¥‡∏©‡∏±‡∏ó‡πÄ‡∏ï‡∏¥‡∏ö‡πÇ‡∏ï‡πÑ‡∏î‡πâ‡∏Å‡πâ‡∏≤‡∏ß‡∏Å‡∏£‡∏∞‡πÇ‡∏î‡∏î</p>
                `;
            } else if(successPct > 60) {
                rank = "Rising Star üåü";
                feedback = `
                    <p class="text-yellow-400 font-bold">‡∏°‡∏µ‡πÅ‡∏ô‡∏ß‡πÇ‡∏ô‡πâ‡∏°‡∏î‡∏µ</p>
                    <p>‡∏ò‡∏∏‡∏£‡∏Å‡∏¥‡∏à‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏≠‡∏¢‡∏π‡πà‡∏£‡∏≠‡∏î‡πÑ‡∏î‡πâ ‡πÅ‡∏ï‡πà‡∏≠‡∏≤‡∏à‡∏ï‡πâ‡∏≠‡∏á‡∏õ‡∏£‡∏±‡∏ö‡∏à‡∏π‡∏ô‡∏Å‡∏≤‡∏£‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡πÇ‡∏¢‡∏á‡∏£‡∏∞‡∏´‡∏ß‡πà‡∏≤‡∏á Key Activities ‡πÅ‡∏•‡∏∞ Cost Structure ‡πÉ‡∏´‡πâ‡∏£‡∏±‡∏î‡∏Å‡∏∏‡∏°‡∏Å‡∏ß‡πà‡∏≤‡∏ô‡∏µ‡πâ‡πÄ‡∏û‡∏∑‡πà‡∏≠‡πÉ‡∏´‡πâ‡∏Å‡∏≥‡πÑ‡∏£‡∏™‡∏∏‡∏ó‡∏ò‡∏¥‡∏™‡∏π‡∏á‡∏Ç‡∏∂‡πâ‡∏ô</p>
                `;
            } else {
                rank = "Pivot Required ‚ö†Ô∏è";
                feedback = `
                    <p class="text-red-400 font-bold">‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏Å‡∏≤‡∏£‡∏õ‡∏£‡∏±‡∏ö‡∏õ‡∏£‡∏∏‡∏á</p>
                    <p>‡∏î‡∏π‡πÄ‡∏´‡∏°‡∏∑‡∏≠‡∏ô‡∏ß‡πà‡∏≤ '‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡πà‡∏≤' ‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏¢‡∏±‡∏á‡πÄ‡∏Ç‡πâ‡∏≤‡πÑ‡∏°‡πà‡∏ñ‡∏∂‡∏á '‡∏Å‡∏•‡∏∏‡πà‡∏°‡∏•‡∏π‡∏Å‡∏Ñ‡πâ‡∏≤' ‡∏ó‡∏µ‡πà‡∏ñ‡∏π‡∏Å‡∏ï‡πâ‡∏≠‡∏á ‡∏•‡∏≠‡∏á‡πÄ‡∏ä‡πá‡∏Ñ‡∏ß‡πà‡∏≤‡∏ô‡∏¥‡∏Ñ‡∏°‡∏≠‡∏∏‡∏ï‡∏™‡∏≤‡∏´‡∏Å‡∏£‡∏£‡∏°‡πÄ‡∏Ç‡∏≤‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£‡∏ã‡∏∑‡πâ‡∏≠‡πÅ‡∏ö‡∏ö‡∏Ç‡∏≤‡∏¢‡∏Ç‡∏≤‡∏î‡∏´‡∏£‡∏∑‡∏≠‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£‡∏£‡∏≤‡∏¢‡∏õ‡∏µ?</p>
                `;
            }

            document.getElementById('success-rank').innerText = rank;
            document.getElementById('analysis-feedback').innerHTML = feedback;

            // Radar Chart
            if(radarChart) radarChart.destroy();
            const ctx = document.getElementById('radarChart').getContext('2d');
            radarChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Technology', 'Market Fit', 'Sustainability', 'Financial', 'Operation'],
                    datasets: [{
                        label: 'Business Viability',
                        data: scores,
                        fill: true,
                        backgroundColor: 'rgba(52, 211, 153, 0.2)',
                        borderColor: 'rgb(52, 211, 153)',
                        pointBackgroundColor: 'rgb(52, 211, 153)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(52, 211, 153)'
                    }]
                },
                options: {
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(255,255,255,0.1)' },
                            grid: { color: 'rgba(255,255,255,0.1)' },
                            pointLabels: { color: '#fff', font: { family: 'Kanit', size: 12 } },
                            ticks: { display: false, max: 100, min: 0 }
                        }
                    },
                    plugins: { legend: { display: false } }
                }
            });
        }

        function showToast(text, colorClass) {
            const toast = document.getElementById('toast');
            const txt = document.getElementById('toast-text');
            txt.innerText = text;
            txt.className = "font-bold text-center " + colorClass;
            toast.classList.remove('hidden');
            setTimeout(() => toast.classList.add('hidden'), 3000);
        }
    </script>
